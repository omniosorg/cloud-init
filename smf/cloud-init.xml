<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle type="manifest"
                name="cloud-init">

    <service name="system/cloud-init"
             type="service"
             version="1">

        <dependency name="loopback"
                    grouping="require_any"
                    restart_on="error"
                    type="service">
            <service_fmri value="svc:/network/loopback" />
        </dependency>

        <dependency name="filesystem_local"
                    grouping="require_all"
                    restart_on="none"
                    type="service">
            <service_fmri value="svc:/system/filesystem/local:default" />
        </dependency>

        <exec_method type="method"
                     name="stop"
                     exec=":true"
                     timeout_seconds="30" />

        <exec_method type="method"
                     name="refresh"
                     exec=":true"
                     timeout_seconds="30" />

        <property_group name="startd"
                        type="framework">
            <propval name="duration"
                     type="astring"
                     value="transient" />
        </property_group>

        <instance name="initlocal"
                  enabled="true">

            <exec_method type="method"
                         name="start"
                         exec="/usr/bin/cloud-init init --local"
                         timeout_seconds="1800" />

        </instance>

        <instance name="init"
                  enabled="true">

            <dependency name="cloudinit_initlocal"
                        grouping="require_all"
                        restart_on="none"
                        type="service">
                <service_fmri value="svc:/system/cloud-init:initlocal" />
            </dependency>

            <dependency name="network"
                        grouping="optional_all"
                        restart_on="error"
                        type="service">
                <service_fmri value="svc:/milestone/network" />
            </dependency>

            <exec_method type="method"
                         name="start"
                         exec="/usr/bin/cloud-init init"
                         timeout_seconds="1800" />

        </instance>

        <instance name="modules"
                  enabled="true">

            <dependency name="cloudinit_init"
                        grouping="require_all"
                        restart_on="none"
                        type="service">
                <service_fmri value="svc:/system/cloud-init:init" />
            </dependency>

            <exec_method type="method"
                         name="start"
                         exec="/usr/bin/cloud-init modules --mode config"
                         timeout_seconds="1800" />

        </instance>

        <instance name="final"
                  enabled="true">

            <dependency name="cloudinit_modules"
                        grouping="require_all"
                        restart_on="none"
                        type="service">
                <service_fmri value="svc:/system/cloud-init:modules" />
            </dependency>

            <dependency name="ssh"
                        grouping="optional_all"
                        restart_on="error"
                        type="service">
                <service_fmri value="svc:/network/ssh:default" />
            </dependency>

            <dependent name="cloudinit_multi-user"
                       grouping="optional_all"
                       restart_on="none">
                <service_fmri value="svc:/milestone/multi-user" />
            </dependent>

            <exec_method type="method"
                         name="start"
                         exec="/usr/bin/cloud-init modules --mode final"
                         timeout_seconds="1800" />

        </instance>

        <stability value="External" />

        <template>
            <common_name>
                <loctext xml:lang="C">cloud-init</loctext>
            </common_name>
        </template>

    </service>

</service_bundle>
